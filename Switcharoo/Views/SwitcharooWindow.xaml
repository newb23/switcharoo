<Window x:Class="Switcharoo.Views.SwitcharooWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Switcharoo.ViewModels"
        xmlns:local="clr-namespace:Switcharoo.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        xmlns:enums="clr-namespace:Switcharoo.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:Switcharoo.Controls"
        WindowStyle="None"
        SizeToContent="WidthAndHeight">

    <Window.DataContext>
        <viewModels:SettingsViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="SelectedTheme">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:SelectedTheme" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Switcharoo;component/Views/Styles/SwitcharooStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" Background="{DynamicResource Background}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{DynamicResource SwitcharooCloseButton}" Click="Close" />
                </StackPanel>
            </Grid>

            <Rectangle Height="2" Fill="{DynamicResource DividerTop}" />
        </StackPanel>

        <TabControl Grid.Row="1" Style="{DynamicResource SwitcharooTabControlHorizontal}">
            <TabItem Header="Default Routines" Style="{DynamicResource SwitcharooTabItemHorizontal}">
                <local:DefaultRoutines />
            </TabItem>
        </TabControl>

        <StackPanel Background="{DynamicResource TabUnselectedBackground}" Grid.Row="2">
            <Rectangle Height="2" Fill="{DynamicResource DividerTop}" />
            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <ComboBox Width="100" Style="{DynamicResource SwitcharooComboBoxNoLabel}" SelectedValue="{Binding Settings.Theme}" ItemsSource="{Binding Source={StaticResource SelectedTheme}}" SelectionChanged="CmbSwitchTheme" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>